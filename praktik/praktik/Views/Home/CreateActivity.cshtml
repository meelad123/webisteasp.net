@model Kalender_BL.Activity

@{
    ViewBag.Title = "Ny Aktivitet";
    Layout = "~/Views/shared/_LayoutPage1.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("input:text.date-txb").datepicker({ dateFormat: "yy/MM/dd" });
    });

</script>
<script src="~/Content/javaScript.js"></script>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="create-fieldset">
        <legend class="create-legend">Lägg till ny aktivitet</legend>
        <br />
        <p class="info-create">
            Info:
        </p>
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Date) *
            </div>
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>
        <br />
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Activitet) *
            </div>
            @Html.EditorFor(model => model.Activitet)
            @Html.ValidationMessageFor(model => model.Activitet)
        </div>
        <br />
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Arrangor) *
            </div>
            @Html.EditorFor(model => model.Arrangor)
            @Html.ValidationMessageFor(model => model.Arrangor)
        </div>
        <br />
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Ort) *
            </div>
            @Html.EditorFor(model => model.Ort)
            @Html.ValidationMessageFor(model => model.Ort)
        </div>
        <br />
        <p class="info-create">
            Kontakt:
        </p>
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Namn) *
            </div>
            @Html.EditorFor(model => model.Namn)
            @Html.ValidationMessageFor(model => model.Namn)
        </div>
        <br />
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Tel) *
            </div>
            @Html.EditorFor(model => model.Tel)
            @Html.ValidationMessageFor(model => model.Tel)
        </div>
        <br />
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Email) *
            </div>
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <br />
        <div class="editor-field">
            <div class="editor-label">
                @Html.LabelFor(model => model.Hemsida) *
            </div>
            @Html.EditorFor(model => model.Hemsida)
            @Html.ValidationMessageFor(model => model.Hemsida)
        </div>
        <br />
        <p class="info-create">
            @Html.LabelFor(model => model.MerInfo) *
        </p>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.MerInfo)
            @Html.ValidationMessageFor(model => model.MerInfo)
        </div>
        <hr />
        <p class="end-form-create">
            @Html.ActionLink("Tillbaka", "Index")
            <input type="submit" value="Lägg till" />
        </p>
        <br />
        <br />
        <br />
    </fieldset>
}

